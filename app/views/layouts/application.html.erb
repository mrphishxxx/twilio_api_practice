<!DOCTYPE html>
<html>
<head>
  <title>TwilioPractice</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Textin and Stuff</a>
      </div>
      <div>
        <ul class="nav navbar-nav">
          <li><a href="/messages">All Messages</a></li>
          <li><a href="/messages/new">Send a Message</a></li>
        </ul>
      </div>
    </div>
  </nav>

   <div class="container main-container">
     <% if notice %>
     <p id ="flash" class="alert alert-success"><%= notice %></p>
     <% end %>
     <% if alert %>
     <p id ="flash" class="alert alert-danger"><%= alert %></p>
     <% end %>
    <%= yield %>
   </div>

   <script type="text/javascript">
     $(document).ready(function(){
       setTimeout(function(){
         $('#flash').fadeOut();
       }, 1500);
     })
   </script>
</body>
</html>
